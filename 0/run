#!/bin/bash

#------------------------------------------------------------------------------
cd ${0%/*} || exit 1
clear


#------------------------------------------------------------------------------
./clean

gmshToFoam cad/*.msh



#------------------------------------------------------------------------------
echo -e "   - Copy 0.org to 0"
rm -r 0
cp -r 0.orig 0

transformPoints -scale "(0.01 0.01 0.01)"
#------------------------------------------------------------------------------
echo -e "   - Start simulation" 
myelectrostaticFoam > logSolver


#------------------------------------------------------------------------------
echo -e "   - Simulation ended\n\n"


#------------------------------------------------------------------------------
